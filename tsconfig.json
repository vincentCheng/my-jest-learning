{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2019",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "utils/*": ["src/utils/*"],
      "apis/*": ["src/apis/*"],
      "hooks/*": ["src/hooks/*"],
      "store/*": ["src/store/*"],
      "components/*": ["src/components/*"]
    },
    "types": ["jest"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
